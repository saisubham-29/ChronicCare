<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="#FFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainPageGreeting"
        android:text="Good Morning,"
        android:textSize="28dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainPageName"
        android:textSize="28dp"
        android:text="Anjali"
        android:layout_toRightOf="@+id/mainPageGreeting"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainPageDate"
        android:text="Friday, Aug 15"
        android:textSize="18dp"
        android:layout_below="@id/mainPageGreeting"
        android:textColor="#90000000"/>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/mainPageDate"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:cardBackgroundColor="#dafaf2"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentReadingTxt"
                android:text="Current Reading"
                android:textColor="#90000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentReadingTxt"
                android:id="@+id/currentReadingValue"
                android:text="250"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/currentReadingValue"
                android:layout_below="@id/currentReadingTxt"
                android:id="@+id/ReadingUnit"
                android:text="mg/dL"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="8dp"
                android:textColor="#90000000"/>
            <ImageView
                android:id="@+id/clockIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:src="@drawable/ic_clock2"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/LastCheckedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/clockIcon"
                android:layout_alignBottom="@id/clockIcon"
                android:layout_marginStart="3dp"
                android:text="Last checked at 8:30pm"
                android:textColor="#90000000"/>
            <LinearLayout
                android:id="@+id/statusLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="23dp"
                android:layout_above="@id/btn_checknow"
                android:layout_marginRight="25dp">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Range"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:id="@+id/btn_checknow"
                android:background="@drawable/button_shape_t1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:text="Check Now"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textStyle="normal"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>