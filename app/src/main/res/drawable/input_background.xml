<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#f7f9fa"/>

    <!-- Border color -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/> <!-- light gray -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Inner padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
